rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function getUserRole(uid) {
      return get(/databases/$(database)/documents/users/$(uid)).data.role;
    }

    function isRole(role) {
      return isSignedIn() && getUserRole(request.auth.uid) == role;
    }

    // USERS
    match /users/{uid} {
      allow get, list: if isRole("admin") || (isSignedIn() && request.auth.uid == uid);

      allow create: if isSignedIn()
        && request.auth.uid == uid
        && (request.resource.data.role == 'client' || !('role' in request.resource.data));

      allow update: if (isSignedIn() && request.auth.uid == uid && !('role' in request.resource.data))
        || isRole("admin");

      allow delete: if isRole("admin");
    }

    // PRODUCTS
    match /products/{productId} {
      allow get, list: if true;
      allow create, update, delete: if isRole("admin") || isRole("developer");
    }

    // CARTS
    match /carts/{cartId} {
      allow read, write: if isSignedIn()
        && (request.auth.uid == resource.data.userId || request.auth.uid == request.resource.data.userId)
        && (request.resource == null || request.resource.data.userId == request.auth.uid);

      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
    }

    // ORDERS
    match /orders/{orderId} {
      allow get, list: if isSignedIn() && (request.auth.uid == resource.data.userId || isRole("admin"));

      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;

      allow update: if isRole("admin")
        || (isSignedIn() && request.auth.uid == resource.data.userId
            && (!('status' in request.resource.data) || request.resource.data.status == resource.data.status));

      allow delete: if isRole("admin");
    }

    // SETTINGS (Admin + Developer only)
    match /settings/{docId} {
      allow read, write: if isRole("admin") || isRole("developer");
    }
  }
}
